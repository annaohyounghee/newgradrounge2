<%= form_for([@profile, @experience], :remote => true) do |form| %>
    <div class="modal-content">  
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <% if @experience.errors.any? %>
                    <div id="error_explanation" class="alert alert-danger">
                        <h4><%= pluralize(@experience.errors.count, "error")%> prohibited this reachout from being saved:</h4>
                        <ul>
                            <% @experience.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <label>Title</label>
                <%= form.text_field :title, id: :title, class: :"form-control" %>
            </div>
            <div class="col-sm-10 col-sm-offset-1">
                <label>Company</label>
                <%= form.text_field :company, id: :company, class: :"form-control" %>     
            </div>
            <div class="col-sm-10 col-sm-offset-1">
                <label>Location</label>
                <%= form.text_field :location, id: :location, class: :"form-control" %> 
            </div>
            <div class="col-sm-offset-1 col-sm-4">
                <label>From</label>
                <div class="input-group" id="datepicker-experience">
                    <%= form.text_field :from_date, id: :from_date, class: :"form-control datepicker-experience" %> 
                </div>
            </div>
            <div class="col-sm-offset-2 col-sm-4">
                <label>To</label>
                <div class="input-group" id="datepicker-experience">
                    <%= form.text_field :to_date, id: :to_date, class: :"form-control datepicker-experience" %> 
                </div>
            </div>

            <div class="col-sm-10 col-sm-offset-1">
                <label>Description</label>
                <%= form.text_area :description, id: :description, class: :"form-control", rows: "3" %> 
            </div>
        </div> <!-- /. row -->
    </div> <!-- /.modal-content -->
    <div class="modal-footer">
        <%= form.submit 'Save', class: "btn btn-primary" %>  
    </div>
<% end %>

<script type="text/javascript">
    $(".datepicker-experience").datepicker( {
        todayHighlight: true,
        format: 'yyyy-mm-dd',
        viewMode: "years", 
        minViewMode: "months"
    });
</script>
