<% provide(:page_title, "All the feed") %>

<!---MAIN SECTION-->
<section class="container">
    <div class="row">

        <!---Left Sidebar-->
        <aside class="col-lg-3 col-sm-3 hidden-xs sidebar-wrapper" id="left-sidebar">
            <%= render "/layouts/left_sidebar" %>
        </aside><!--/left-sidebar-->

        <!---Feeds section-->
        <div class="col-lg-6 col-sm-6" id="feeds-content">
            <div class="reachouts-search">
                <%= form_tag(reachouts_path, method: "get") do %>
                <div class="input-group">
                        <span class="glyphicon glyphicon-search form-control-search"></span>
                        <%= text_field_tag :term, params[:term], class: "form-control"%>
                        <span class="input-group-btn">
                            <%= submit_tag 'Search', class: "btn btn-default btn-search" %>
                        </span>
                    <% end %>
                </div>
            </div>
            <div class="infinite-table">
                <div class="table">
                    <%= render :partial => 'reachouts', :object => @reachouts %>
                </div>
                <p class="pagination">
                    <%= link_to_next_page(@reachouts, 'Next Page', :remote => true) %>
                </p>
            </div>
        </div><!--/#feeds-content-->

        <!-- Right sidebar -->
        <aside class="col-lg-3 col-sm-3 hidden-xs sidebar-wrapper" id="right-sidebar">
            <%= render "/layouts/right_sidebar" %>
        </aside>


    </div><!--/ main row-->
</section><!--/.MAIN SECTION-->
