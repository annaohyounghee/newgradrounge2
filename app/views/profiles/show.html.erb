<% provide(:page_title,"#{@user.first_name.capitalize}'s Profile" ) %>
<body id="user-profile">

    <!---MAIN SECTION-->
    <section class="container">
        <div class="row">

            <!---Left Sidebar-->
            <aside class="col-lg-3 col-sm-3 hidden-xs sidebar-wrapper" id="left-sidebar">
                <%= render "/layouts/left_sidebar" %>
            </aside><!--/left-sidebar-->

            <!-- Main section-->
            <div class="col-lg-9 col-sm-9">
                <div class="row panel">
                    <div class="col-sm-2">
                        <%= cl_image_tag(@user.avatar.url, class: "user-picture img-circle img-responsive")%>
                    </div>
                    <div class="col-sm-10">                       
                        <div class="user-edit row">
                            <div class="col-sm-7 summary">
                                <h3><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h3>
                                <p><%= @user.position %></p>
                                <!-- <h6>Neuroscience</h6>
                                <h6>Department of Psychology</h6> -->
                            </div>
                        </div>                       
                    </div>
                </div> <!--/ cv-header-->

                <!-- ===========================
                    CV MAIN PART
                ============================ -->

                <div class="row">

                    <!-- ===========================
                        CV LEFT PART
                    ============================ -->
                    <div class="col-md-8 mainleft">

                        <div id="research" class="row panel">
                            <div class="col-sm-11 col-sm-offset-1 cv-section">
                                <div class="title-edit row">
                                    <div class="col-md-8 title">
                                        <h3>Research</h3>
                                    </div>
                                </div>
                                <% @profile.researches.each do |research| %>
                                    <div class="research-edit row" >
                                        <div class="col-md-10">
                                            <p><%= research.description%></p>   
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div><!-- / #research -->
                        
                        <div id="education" class="row panel">
                            <div class="col-sm-11 col-sm-offset-1 cv-section">
                                <div class="title-edit row">
                                    <div class="col-md-8 title">
                                        <h3>Education</h3>
                                    </div>                              
                                </div>
                                <% @profile.educations.each do |education| %>
                                    <div class="school-edit row" >
                                        <div class="col-md-10">
                                            <h5><%= education.school %></h5>
                                            <h6><%= education.degree %>, <%= education.field_of_study %>, <%= education.grade %></h6>
                                            <p><%= education.from_date %> - <%= education.to_date %></p>     
                                            <p><%= education.description %></p>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div><!-- / #education -->

                        
                        <div id="experience" class="row panel">
                            <div class="col-sm-11 col-sm-offset-1 cv-section">
                                <div class="title-edit row">
                                    <div class="col-md-8 title">
                                        <h3>Experience</h3>
                                    </div>                              
                                </div>
                                <% @profile.experiences.each do |experience| %>
                                    <div class="school-edit row" >
                                        <div class="col-md-10">
                                            <h5><%= experience.title %></h5>
                                            <h6><%= experience.company %></h6>
                                            <p><%= experience.from_date %> - <%= experience.to_date%></p> 
                                            <p><%= experience.location %></p> 
                                            <p><%= experience.description %></p>
                                        </div>
                                    </div>
                                <% end %>
                            </div>
                        </div><!-- / #experience -->
                        
                    </div><!-- / Mainleft row -->


                    <!-- ===========================
                    CV Right PART
                     ============================ -->

                    <div class="col-md-4 mainright">

                        <div id="teck-skills" class="row panel">
                            <div class="col-sm-offset-1 col-sm-11 col-md-10 cv-section">
                                 <div class="title-edit row">
                                    <div class="col-md-8 title">
                                        <h3>Skills</h3>
                                    </div>                              
                                </div>
                                <% @profile.tag_list.each do |skill| %>
                                    <span class="label label-primary"><%= skill %></span>
                                <% end %>
                            </div>
                        </div>

                        
                        <div id="trophy" class="row panel">

                            <div class="col-sm-11  col-sm-offset-1 cv-section ">
                                <div class="title-edit">
                                    <h3>Awards</h3>
                                </div>
                                <div class="award">
                                    <%= image_tag Award.find_by(profile_id: @profile.id).image %> 
                                    <p><%= Award.find_by(profile_id: @profile.id).title %></p>   
                                </div>
                                  <!-- / 1st award -->
                            </div><!-- / awards -->
                        </div> <!-- / trophy -->
                        

                    </div><!-- / cv right part-->
                </div><!-- / cv main part-->

            </div>
        </div>
    </section><!--/.MAIN SECTION -->

    


</body>
