<% provide(:page_title,"Edit your Profile" ) %>

<body id="user-profile">

    <!---MAIN SECTION-->
    <section class="container">
        <div class="row">

            <!---Left Sidebar-->
	        <aside class="col-lg-3 col-sm-3 hidden-xs sidebar-wrapper" id="left-sidebar">
	            <%= render "/layouts/left_sidebar" %>
	        </aside><!--/left-sidebar-->

            <!-- Main section-->
            <div class="col-lg-9 col-sm-9">
                <div class="row panel">
                    <div class="col-sm-2">
                        <%= cl_image_tag(@user.avatar.url, class: "user-picture img-circle img-responsive")%>
                    </div>
                    <div class="col-sm-10">
                        
                            <div class="user-edit row">
                                <div class="col-sm-7 summary">
                                    <h3><%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %></h3>
                                    <p><%= @user.position %></p>
                                    <!-- <h6>Neuroscience</h6>
                                    <h6>Department of Psychology</h6> -->
                                </div>
                                <div class="col-md-2 icon">	 
                                	<%= link_to edit_user_path(@user), :remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#researchNewModal' do %>
                                			<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                                	<% end %>
                                	<div class="modal" id="userEditModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
	                            </div>
                            </div>
                        
                    </div>
                </div> <!--/ cv-header-->

                <!-- ===========================
                    CV MAIN PART
                ============================ -->

                <div class="row">

                    <!-- ===========================
                        CV LEFT PART
                    ============================ -->
                    <div class="col-md-8 mainleft">

                    	<div id="research" class="row panel">
	                        <div class="col-sm-11 col-sm-offset-1 cv-section">
	                            <div class="title-edit row">
	                            	<div class="col-md-8 title">
	                            		<h3>Research</h3>
	                            	</div>
	                            	<div class="col-md-4 icon">
                                		<%= link_to new_profile_research_path(@profile, @research),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#researchNewModal' do %>
                                        			<i class="fa fa-plus fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                        <div class="modal" id="researchNewModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                	</div>
	                            </div>
	                            <% @profile.researches.each do |research| %>
		                            <div class="research-edit row" >
                                        <div class="col-md-10">
											<p><%= research.description%></p>	
		                                </div>
		                                <div class="col-md-2 icon">	 
	                                    	<%= link_to edit_profile_research_path(@profile, research),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#researchNewModal' do %>
	                                    			<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
	                                    	<% end %>
	                                    	<div class="modal" id="researchEditModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
	                                    	<%= link_to [@profile, research] , method: :delete, data: { confirm: 'Are you sure?' } do %>
	                                    		<i class="fa fa-times fa-lg" aria-hidden="true"></i>
	                                    	<% end %>
	                                    </div>
		                            </div>
	                            <% end %>
	                        </div>
	                    </div><!-- / #research -->
                    	
                   		<div id="education" class="row panel">
                            <div class="col-sm-11 col-sm-offset-1 cv-section">
                                <div class="title-edit row">
                                	<div class="col-md-8 title">
                                		<h3>Education</h3>
                                	</div>                              
                                	<div class="col-md-4 icon">
                                		<%= link_to new_profile_education_path(@profile, @education),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#educationalNewModal' do %>
                                        			<i class="fa fa-plus fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                        <div class="modal" id="educationalNewModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                	</div>
                                </div>
                                <% @profile.educations.each do |education| %>
                                    <div class="school-edit row" >
                                        <div class="col-md-10">
                                        	<h5><%= education.school %></h5>
                                            <h6><%= education.degree %>, <%= education.field_of_study %>, <%= education.grade %></h6>
                                            <p><%= education.from_date %> - <%= education.to_date %></p>	 
                                            <p><%= education.description %></p>
                                        </div>
                                        <div class="col-md-2 icon">	 
                                        	<%= link_to edit_profile_education_path(@profile, education),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#educationalNewModal' do %>
                                        			<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                        	<div class="modal" id="educationalEditModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                        	<%= link_to [@profile, education] , method: :delete, data: { confirm: 'Are you sure?' } do %>
                                        		<i class="fa fa-times fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                    	</div>
                                    </div>
                                <% end %>
                            </div>
                        </div><!-- / #education -->

	                    
	                    <div id="experience" class="row panel">
                            <div class="col-sm-11 col-sm-offset-1 cv-section">
                                <div class="title-edit row">
                                	<div class="col-md-8 title">
                                		<h3>Experience</h3>
                                	</div>                              
                                	<div class="col-md-4 icon">
                                		<%= link_to new_profile_experience_path(@profile, @experience),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#experienceNewModal' do %>
                                        			<i class="fa fa-plus fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                        <div class="modal" id="experienceNewModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                	</div>
                                </div>
                                <% @profile.experiences.each do |experience| %>
                                    <div class="school-edit row" >
                                        <div class="col-md-10">
                                        	<h5><%= experience.title %></h5>
                                            <h6><%= experience.company %></h6>
                                            <p><%= experience.from_date %> - <%= experience.to_date%></p>	
                                            <p><%= experience.location %></p> 
                                            <p><%= experience.description %></p>
                                        </div>
                                        <div class="col-md-2 icon">	 
                                        	<%= link_to edit_profile_experience_path(@profile, experience),:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#experienceEditModal' do %>
                                        			<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                        	<div class="modal" id="experienceEditModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                        	<%= link_to [@profile, experience] , method: :delete, data: { confirm: 'Are you sure?' } do %>
                                        		<i class="fa fa-times fa-lg" aria-hidden="true"></i>
                                        	<% end %>
                                    	</div>
                                    </div>
                                <% end %>
                            </div>
                        </div><!-- / #experience -->
                    	
                    </div><!-- / Mainleft row -->


                    <!-- ===========================
                        CV Right PART
                     ============================ -->

                    <div class="col-md-4 mainright">
                        <div id="teck-skills" class="row panel">
                            <div class="col-sm-offset-1 col-sm-11 col-md-10 cv-section">
                                 <div class="title-edit row">
                                    <div class="col-md-8 title">
                                        <h3>Skills</h3>
                                    </div>  
                                    <div class="col-md-4 icon">
                                            <%= link_to profiles_edit_skills_path(id: @profile.id), method: :post,:remote => true, class: 'edit-profile', 'data-toggle' =>  "modal", 'data-target' => '#skillsEditModal' do %>
                                                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                                            <% end %>
                                            <div class="modal" id="skillsEditModal" tabindex="-1" role="dialog" aria-hidden="false"></div>
                                        </div>                            
                                </div>
                                    <div class="school-edit row" >
                                        <div class="col-md-9">
                                            <% @profile.tag_list.each do |skill| %>
                                                <span class="label label-primary"><%= skill %></span>
                                            <% end %>
                                        </div>                                
                                    </div>
                                
                            </div>
                        </div>

                        
                        <div id="trophy" class="row panel">
                            <div class="col-sm-11  col-sm-offset-1 cv-section ">
                                <div class="title-edit">
                                	<h3>Awards</h3>
                                </div>
                                <div class="award">
                                    <%= image_tag Award.find_by(profile_id: @profile.id).image %> 
                                    <p><%= Award.find_by(profile_id: @profile.id).title %></p>   
                                </div>
                                  <!-- / 1st award -->
                            </div><!-- / awards -->
                        </div> <!-- / trophy -->
                    

                    </div><!-- / cv right part-->
                </div><!-- / cv main part-->

            </div>
        </div>
    </section><!--/.MAIN SECTION -->

    


</body>




	      	
	    



