<body class="login-section">
  <div class="container-fluid">
    <div class="container" id='notice-wrapper'>
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
                <%= value %>
            </div>
        <% end %>
    </div>
    <div class="logo-login">
        <%= link_to root_path do %>
            <%= image_tag('logo-orange-white-transparent.png') %>
        <% end %>
    </div>
    <div class="panel-login panel panel-default">
      
      <div class="panel-header text-center">
        <h3>Forgot your password?</h3>
        <p>To reset your password, please enter the email address you signed up with:</p>
      </div>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  		<%= devise_error_messages! %>
        
        <div class="panel-content">
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control border-input" %>
          </div>
        </div>

        <div class="panel-footer">
          <div class="actions">
            <%= f.submit "Reset password", class: "btn btn-lg btn-block" %>
          </div>
        </div>

      <% end %>
      <div class="devise-shared-links">          
        <%= render "devise/shared/links" %>
      </div>
    
    </div>
  </div>
</body>

