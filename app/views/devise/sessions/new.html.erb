<% provide(:page_title, "Log In") %>
<body class="login-section">
    <div class="container-fluid">
        <div class="container" id='notice-wrapper'>
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>">
                    <%= value %>
                </div>
            <% end %>
        </div>
        <div class="logo-login">
            <%= link_to root_path do %>
                <%= image_tag('logo-orange-white-transparent.png') %>
            <% end %>
        </div>
        <div class="panel-login panel panel-default">
            <div class="panel-header text-center">
                <h3>Welcome back</h3>
                <h5>Log in to your GradLounge account.</h5>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="panel-content">
                <%= devise_error_messages! %>
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control border-input" %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control border-input" %>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="form-group">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>
            </div>

            <div class="panel-footer">
                <div class="actions">
                    <%= f.submit "Log in", class: "btn btn-lg btn-block" %>
                </div>
            </div>

            <% end %>
            <div class="devise-shared-links">
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</body>

